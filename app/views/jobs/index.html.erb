<p id="notice"><%= notice %></p>

<%= form_for_filterrific @filterrific,  html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
 
  <div>
    Job Title
    <%= f.select(
      :job_title,
      @filterrific.select_options[:job_title],
      { include_blank: '- Any -' }
    ) %>
  </div>
  <div>
    Company Name
    <%= f.select(
      :company_name,
      @filterrific.select_options[:company_name],
      { include_blank: '- Any -' }
    ) %>
  </div>
  <div>
    Location
    <%= f.select(
      :location,
      @filterrific.select_options[:location],
      { include_blank: '- Any -' }
    ) %>
  </div>
  
  <div>
    Sorted by
    
  </div>
  <div>
    <%= link_to(
      'Reset filters',
      reset_filterrific_url,
    ) %>
  </div>
  
  <%= render_filterrific_spinner %>
  <%= f.submit 'Filter' %>
<% end %>
<br />
<br />

<%= render(
  partial: 'jobs/list',
  locals: { jobs: @jobs }
) %>



<%= link_to 'New Job', new_job_path %>
